/* global styling */
html {
	background-color: white;
}

body {
  font-family: 'worksans', Arial, sans-serif !important;
	font-weight: 500;
}

b,
strong {
	font-weight: 700;
}

.edit-link {
	display: none;
}

/* styling of theme */
.theme-container p {
  margin-bottom: 2rem;
  font-size: 1.125rem;
  line-height: 1.8;
}

.theme-container h1 {
  font-size: 2.4rem;
  font-weight: bold;
}

.theme-container .page {
	margin-top: 47px;
	padding-bottom: 0;
  background-color: white;
}

.theme-container .page .last-updated {
	color: greyDark;
}

.theme-container .page blockquote {
  padding: 0;
  border: 0;
  color: $accentColor;
  font-weight: 600;
  quotes: "“" "”" "‘" "’";
}

.theme-container blockquote::before {
  content: open-quote;
  display: inline-block;
  font-size: 1.625rem;
}

.theme-container blockquote::after {
  content: close-quote;
  display: inline-block;
  font-size: 1.625rem;
}

.theme-container blockquote > p {
  display: inline;
  font-size: 1.625rem;
  line-height: 1.38;
  letter-spacing: 0.6px;
}

.content:not(.custom) > *:first-child {
  margin: 0 !important;
}

.theme-default-content:not(.custom) {
  padding-bottom: 20rem !important;
}

.theme-container .content:not(.custom) > h1 {
  margin-bottom: 1.625rem;
  font-weight: bold;
  color: $textColor;
	font-size: 3.375rem;
}

.theme-container .content:not(.custom) > h2 {
  font-size: 1.5rem;
	font-weight: 600;
  line-height: 2.25;
}

.theme-container .content:not(.custom) > h3 {
  font-size: 1.125rem;
	font-weight: 600;
	line-height: 1.75;
}

@media (min-width: 720px) {
  .theme-container .page {
		padding-left: 341px;
	}

  .theme-container h1 {
    font-size: 3.2rem;
  }
}

@media (max-width: 719px) {
  /* Spacing of last updated in content area */
  .theme-default-content:not(.custom)>h1, .theme-default-content:not(.custom)>h2, .theme-default-content:not(.custom)>h3, .theme-default-content:not(.custom)>h4, .theme-default-content:not(.custom)>h5, .theme-default-content:not(.custom)>h6 {
      margin-top: -4rem !important;
  }

  .theme-default-content:not(.custom)>:first-child {
    margin-top: 1rem !important;
  }
}

@media (max-width: 959px) {
	.content:not(.custom) {
    padding: 0 20px;
	}

  .theme-default-content:not(.custom) {
    padding-bottom: 20rem !important;
  }
}
