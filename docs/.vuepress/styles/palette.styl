@import css-defaults
@import fonts
@import variables
@import home
@import search-box
@import sidebar
@import navbar
@import page-navigation
@import content

html {
	background-color: greyLight;
}

body {
  font-family: 'worksans', Arial, sans-serif !important;
	font-weight: 500;
}

b,
strong {
	font-weight: 700;
}

.page {
	background-color: white;
}

.edit-link {
	display: none;
}

@media (min-width: 720px) {
	.theme-container .page {
		padding-left: 341px;
	}
}

.body-small {
	font-size: .75rem;
	font-weight: 500;
	font-style: normal;
	line-height: 1.5;
}

.body-medium {
	font-size: 1rem;
	font-weight: 500;
	font-style: normal;
	line-height: 1.5;
}

.body-large {
	font-size: 1.5rem;
	font-weight: 500;
	font-style: normal;
	line-height: 1.5;
}

h1,
.heading-large {
	font-size: 3rem;
	font-weight: 900;
	font-style: normal;
	line-height: 1.08;
}

h2,
.heading-medium {
	font-size: 2.5rem;
	font-weight: 900;
	font-style: normal;
	line-height: 1.1;
}

h3,
.heading-small {
	font-size: 2rem;
	font-weight: 900;
	font-style: normal;
	line-height: 1.13;
}
