.sidebar > .sidebar-links {
	padding: 0 40px;
}

.theme-container .sidebar {
  background-color: bgPastel;
  border: 2px solid bgPastel;
}

.sidebar-heading {
  margin-bottom: spacingDefault;
}

.sidebar-heading {
	padding: 0;
	font-size: 1.5rem;
	font-weight: 700;
	font-style: normal;
	line-height: 1.5;
	text-transform: uppercase;
	border: 0;
}

.sidebar-group a.sidebar-link {
	padding: 0;
}

a.sidebar-link {
	font-size: 1rem;
	line-height: 1.5;
	color: greyDark;
}

.sidebar-sub-headers a.sidebar-link.active {
  font-weight: 700;
}

@media (max-width: 719px) {
  .theme-container .sidebar {
    z-index: 15;
    width: 100%;
    height: 100%;
    font-size: 1.2rem;
    background-color: bgPastel;
    transform: translateY(-100%);
  }

  .theme-container.sidebar-open .sidebar {
    transform: translateY(0);
  }
}

@media (min-width: 720px) {
  .sidebar-link:hover {
    font-weight: 700;
  }
}
