.sidebar {
	width: 340px;
	padding-left: 40px;
	padding-right: 40px;
	border: 0;
}

.theme-container .sidebar {
  background-color: #fff;
}

/* Sidebar heading */
.sidebar-heading {
	margin-bottom: 20px;
	padding: 0;
	font-size: 1.5rem;
	font-weight: 700;
	font-style: normal;
	line-height: 1.5;
	text-transform: uppercase;
	border: 0;
}

/* Sidebar links */
.sidebar > .sidebar-links {
	padding: 0 !important;
}

.sidebar-links > li:not(:last-child) {
	margin-bottom: 65px;
}

.sidebar-group-items > li:not(:last-child) {
	margin-bottom: 20px;
}

.sidebar-group a.sidebar-link {
	padding: 0;
}

a.sidebar-link {
	position: relative;
	font-size: 1rem;
	line-height: 1.5;
	color: greyDark;
	border: 0;
}

a.sidebar-link.active {
	font-weight: 700;
	color: #fe595b;
	/*border-left-color: #fe595b;*/
	border: 0;
}

a.sidebar-link.active::before {
	content: '';
	position: absolute;
	top: 0;
	left: -30px;
	display: inline-block;
	width: 4px;
	height: 32px;
	background-color: $accentColor;
}

.sidebar-sub-headers a.sidebar-link.active {
  font-weight: 700;
}

@media (min-width: 720px) {
  .sidebar-link:hover {
    font-weight: 700;
  }
}
